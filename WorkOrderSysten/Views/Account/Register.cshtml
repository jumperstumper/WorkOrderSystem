@model InventoryControlSystem.ViewModels.RegisterVM
 
@{
    Layout = "_LoginAndRegister";
 }

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form asp-controller="Account" asp-action="Register">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" asp-for="FirstName" type="text" placeholder="Enter your first name" />
                                        <label asp-for="FirstName">First name</label>
                                        <span asp-validation-for="FirstName"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input class="form-control" asp-for="LastName" type="text" placeholder="Enter your last name" />
                                        <label asp-for="LastName">Last name</label>
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" asp-for="Email" type="text" placeholder="name@example.com" />
                                <label asp-for="Email">Email</label>
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-group form-floating mb-3 mb-md-0">
                                        <input class="form-control" asp-for="Password" type="password" placeholder="Create a Password" />
                                        <label asp-for="Password">Password</label>
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-floating mb-3 mb-md-0" >
                                        <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm your password" />
                                        <label asp-for="ConfirmPassword">Confirm password</label>
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid form-control">
                                    <button class="btn btn-primary btn-block" type="submit">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="login.html">Have an account? Go to login</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   

